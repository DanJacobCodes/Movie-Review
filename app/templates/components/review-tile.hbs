
<li class="movie-tile">
  <h4>{{review.user}}'s Movie Review for {{review.movie}}</h4>
  {{#if isImageShowing}}
  <p><img src={{review.image}} alt={{review.movie}} {{action 'imageHide'}}></p>
  <h4><em>Review:</em> {{review.user_review}}</h4>

{{else}}
  <br>
  <br>
  <button {{action 'imageShow'}}class="btn pink">Show Review</button>
  <br>
{{/if}}
  <br>
{{update-review review=review update="update"}}
<br>
 <button {{action 'delete' review}}class="btn red material-icons">delete</button>
</li>
